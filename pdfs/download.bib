booktitle = {Ieee Infocom},
doi = {10.1109/INFOCOM.2017.8057033},
isbn = {978-1-5090-5336-0},
keywords = {Estimation,Legged locomotion,Mobile communication,Noise measurement,Real-time systems,Recruitment,Sensors,approximation ratio,approximation theory,context-aware data quality estimation scheme,context-quality classifier,ground truth data,historical sensing data,information retrieval,mobile computing,mobile crowdsensing,optimisation,real-world temperature data,stochastic submodular maximization problem,user recruitment},
